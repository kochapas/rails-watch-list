<div class="modal fade" id="exampleModalCenter-<%= @list.id %>-<%= @movie.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-lightgray">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= @movie.title %> [ <%= @movie.rating %> <%= icon('fas', 'star', class: "text-warning") %> ]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div style="display: grid; grid-template-columns: auto;">
          <%= image_tag(@movie.poster_url, class: "mx-auto mb-3", style: "width: 300px;")  %>
          <%= @movie.overview %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning font-rubik" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
