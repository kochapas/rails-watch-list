<%= render "/lists/navbar" %>
<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "Add Bookmark", new_list_bookmark_path(@list) , class: "btn btn-primary" %>
  <div class="d-flex">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-2" style="width: 18rem;">
        <%= link_to list_path(bookmark) do %>
          <img src="<%= bookmark.movie.poster_url %>"  class="card-img-top" alt="">
        <% end %>
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <%= link_to bookmark_path(bookmark), method: "DELETE" do %>
              <%= icon('fas', 'trash', class: "text-danger") %>
            <% end %>
          </div>
          <p class="card-text"><%= bookmark.comment %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
